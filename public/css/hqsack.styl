html
  min-height: 100%
  background: linear-gradient(#343999, #7073cd)

body
  text-align: center
  font-family: 'Open Sans', sans-serif
  color: white

.hidden
  display: none !important

h1.title
  font-size: 42px

.label
  font-size: 20px
  margin-top: 50px

p.question
  font-size: 20px
  margin-bottom: 40px

.timer
  font-size: 100px

iframe.question
  width: 100%
  height: 400px
.frames
  display: flex
  iframe
    flex-grow: 1
    height: 900px

.pulse
  animation pulse 1.5s infinite ease-in-out

@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}