@font-face
  font-family: 'Bebas Neue Light'
  src: url('../fonts/BebasNeue_Light.otf') format('otf')

html
  min-height: 100%
  background: linear-gradient(#e9e9f0, #ecedf7)

body
  text-align: center
  font-family: 'Bebas Neue Light', sans-serif
  color: #555

.container
  position: relative
  overflow: auto

.hidden
  display: none !important

.github
  position: absolute
  display: flex
  align-items: center
  top: 10px
  right: 10px
  text-decoration: none
  font-weight: 600
  font-size: 14px
  color: inherit

.title
  font-size: 42px
  font-weight: 600
  margin: 20px auto 0

.tag
  font-size: 16px
  font-weight: 600
  margin: 10px auto 20px

.label
  font-size: 20px
  margin-top: 50px

.waiting
  img
    margin-top: 30px
  .label
    font-size: 30px

p.question
  font-size: 20px
  font-weight: 600

.timer
  font-size: 100px

iframe.question
  width: 100%
  height: 400px
.frames
  display: flex
  iframe
    flex-grow: 1
    height: 900px

.pulse
  animation pulse 1.5s infinite ease-in-out

@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}