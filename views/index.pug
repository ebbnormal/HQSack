doctype html
head
  title HQsack
  script(src="https://code.jquery.com/jquery-3.3.1.min.js")
  script(type="text/javascript")
    | window.displayTest = #{displayTest || false};
  script(src="/js/hqsack.js")
  link(rel="stylesheet", type="text/css", href="/css/hqsack.css")
html
  body
    .container
      a.github(href="https://github.com/acrimi/HQSack", target="_blank")
        | HQsack &nbsp;
        img(src="/images/github.png", width="30px", height="30px")
      .countdown.hidden
        a.action.test(href="/test") View example question >
        h1.title HQsack
        p.tag HQ Search Assist Client
        img(src="/images/cusack1.png")
        p.label The next game starts in
        .clock
          span.hours
          | :
          span.minutes
          | :
          span.seconds
      .waiting.hidden
        h1.title The game has begun!
        img(src="/images/cusack2.png")
        p.label.pulse Waiting for next question...
      .question.hidden
        if displayTest
          a.action.back(href="/") < Back to home
        .info
          p.question-line
            span.question-number.decoration
            span.question-text(title="Click to append word to answer search. Ctrl/Shift+click to append multiple.")
            | &nbsp;
            a.action.clear-modifiers.hidden Clear
          span.decoration 1)&nbsp;
          span.answer.one
          | &nbsp;&nbsp;&nbsp;
          span.decoration 2)&nbsp;
          span.answer.two
          | &nbsp;&nbsp;&nbsp;
          span.decoration 3)&nbsp;
          span.answer.three
        .question-timer
        iframe.question-search
        .frames
          iframe.answer-one
          iframe.answer-two
          iframe.answer-three